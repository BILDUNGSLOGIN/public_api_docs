                "type": "string",
                "description": "User Alias",
                "example": "Max M."
              },
              {
                "type": "null"
              }
            ]
          },
          "roles": {
            "title": "Roles",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UserRole"
            }
          }
        }
      },
      "UserContext": {
        "title": "UserContext",
        "required": [
          "id",
          "roles",
          "organizations"
        ],
        "type": "object",
        "properties": {
          "id": {
            "title": "Id",
            "maxLength": 255,
            "minLength": 1,
            "type": "string",
            "description": "identifier for a user within an organization"
          },
          "first_name": {
            "title": "First Name",
            "anyOf": [
              {
                "maxLength": 255,
                "minLength": 1,
                "type": "string",
                "description": "First Name",
                "example": "Max"
              },
              {
                "type": "null"
              }
            ]
          },
          "last_name": {
            "title": "Last Name",
            "anyOf": [
              {
                "maxLength": 255,
